<div class="container">
  <div class="row">
    <div class="col-12">
      <table class="table">
        <thead>
          <tr>
            <th scope="col">Materia</th>
            <th scope="col">Acciones</th>
          </tr>
        </thead>
        <tbody>
          <% @matters.each do |materia| %>
            <tr>
              <td>
                <%= materia.name_matter %>
              </td>
              <td>
                <% if current_user.has_role? :admin %>
                  <%= link_to "Editar" , edit_admin_matter_path(materia) %>
                    <% end %>
              </td>
            </tr>
            <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>



























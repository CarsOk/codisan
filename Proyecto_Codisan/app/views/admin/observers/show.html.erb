<div class="container_observadores">
  <table class="table">
    <thead class="thead-dark">
      <tr>
        <th scope="col">Codigo de cagtegoria</th>
        <th scope="col">Descripcion</th>
        <th scope="col">Sancion</th>
        <th scope="col">Acciones</th>
      </tr>
    </thead>
    <tbody>
      <% @fault_observers.each do |observador| %> 
        <tr> 
              <td><%= observador.fault.category %></td>
              <td><%= observador.description %></td>
              <td><%= observador.fault.sanction %></td>
              <td> 
                <%= link_to "Editar", edit_admin_observer_fault_observer_path(@observer, observador ), method: :get, id:"quitarLinea"%>
                <%= button_to "Eliminar", admin_observer_fault_observer_path(@observer, observador ), method: :delete, id:"quitarLinea", onclick: "return confirmDestroy('Â¿Desea eliminar esto?')"%>
              </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= button_to "crear", new_admin_observer_fault_observer_path(@observer, @fault_observer ), method: :get, class:"btn btn-primary", id:"boton-faltas"%>
</div>



<script>
function confirmDestroy(message) {
  if (!confirm(message)) {
    return false;
  }
}
</script>

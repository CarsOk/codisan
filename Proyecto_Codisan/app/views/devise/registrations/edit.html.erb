<section class="container-edit">
  <article class="formulario">
<h2>Editar <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

<div class="field", id="center-text">
  <%= image_tag(@user.avatar.url, :size => "100x100", class: "rounded-circle") if @user.avatar? %>
  <%= f.file_field :avatar%>  
</div>

  <div class="field">
    <%= f.label :Correo %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"form-control" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Actualmente esperando confirmación para: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :Contraseña %> <i>(Déjalo en blanco si no quieres cambiarlo)</i><br />
    <%= f.password_field :password, autocomplete: "new-password",class:"form-control" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> caracteres minimos</em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :Confirmar_contraseña %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password",class:"form-control" %>
  </div>

  <div class="field">
    <%= f.label :contraseña_actual %> <i>(Necesitamos su contraseña actual para confirmar sus cambios)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password",class:"form-control" %>
  </div>

  <div class="actions", id="center-text">
    <%= f.submit "Actualizar" %>
  </div>
<% end %>
<%= link_to "Atrás", :back %>
  </article>
</section>

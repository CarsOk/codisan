<h2>Registrarse</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
     <%= f.label :Tipo_de_Documento %><br />
   <%= f.select :type_document, options_for_select([["Cedula de ciudadania", "CC"], ["Tarjeta de identidad", "TI"], ["Registro Civil", "RC"]])%>
  </div>

  <div class="field">
  <%= f.label :Numero_De_Documento %><br />
  <%= f.number_field :document %>
  <div>

  <div class="field">
  <%= f.label :Primer_Nombre %><br />
  <%= f.text_field :first_name %>
  <div>

  <div class="field">
  <%= f.label :Segundo_Nombre %><br />
  <%= f.text_field :second_name %>
  <div>
  
  <div class="field">
  <%= f.label :Primer_Apellido %><br />
  <%= f.text_field :first_last_name %>
  <div>

  <div class="field">
  <%= f.label :Segundo_Apellido %><br />
  <%= f.text_field :second_last_name %>
  <div>
  
  <div class="field">
  <%= f.label :Numero_De_Telefono %><br />
  <%= f.number_field :phone_number %>
  <div>
  
  <div class="field">
    <%= f.label :Correo %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :ContraseÃ±a %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> caracteres minimos)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :Confirmar_contraseÃ±a %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Registrarme" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
